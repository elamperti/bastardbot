{% extends "layout.tlp" %}
{% set title='Links' %}
{% set breadcrumb=[('/', "BastardBot"), ('links', "Links")] %}
{% set header_title='Link collection' %}

{% block mainContent %}
    <ul class="list-group">
    {% for link in links %}
        <li class="list-group-item">
            <a href="{{ link.target }}">{{ link.title }}</a><br>
            <small>{{ link.description }}</small>
        </li>
    {% endfor %}
    </ul>
{% endblock %}

